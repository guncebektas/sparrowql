{
  "name": "sparrowql",
  "version": "0.2.0",
  "license": "MIT",
  "main": "lib/index.js",
  "description": "Declarative MongoDB aggregations.",
  "repository": "https://github.com/vazco/sparrowql",
  "bugs": "https://github.com/vazco/sparrowql/issues",
  "keywords": [
    "aggregate",
    "declarative",
    "mongodb"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "coverage": "jest --coverage",
    "coverage:report": "codecov",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "devDependencies": {
    "babel-eslint": "8.2.6",
    "codecov": "3.0.4",
    "eslint": "5.4.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-config-vazco": "4.0.0",
    "eslint-plugin-babel": "5.1.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-vazco": "1.0.0",
    "jest": "23.5.0",
    "mongodb": "3.1.3",
    "prettier": "1.14.2",
    "uuid": "3.3.2"
  },
  "jest": {
    "coverageReporters": [
      "html",
      "lcovonly",
      "text-summary"
    ],
    "globalSetup": "./__mongo__/setup.js",
    "globalTeardown": "./__mongo__/teardown.js",
    "moduleNameMapper": {
      "^sparrowql$": "<rootDir>"
    },
    "testEnvironment": "./__mongo__/environment.js"
  }
}
